@page
@model AutoshopWebApp.Pages.Admin.AdminAccountManagmentModel
@{
    ViewData["Title"] = "Изменение данных аккаунта";
}

<h4>@ViewData["Title"]</h4>
<div class="row">
    <div class="col-md-6">
        <form id="change-login-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LoginModel.Email"></label>
                <input asp-for="LoginModel.Email" class="form-control" />
                <span asp-validation-for="LoginModel.Email" class="text-danger"></span>
            </div>
            <input asp-for="LoginModel.UserID" class="hidden" />
            <button type="submit" class="btn btn-default" asp-page-handler="Login">Обновить логин</button>
        </form>
    </div>
</div>


