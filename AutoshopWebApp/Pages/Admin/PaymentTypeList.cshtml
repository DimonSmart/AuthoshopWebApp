@page
@model AutoshopWebApp.Pages.Admin.PaymentTypeListModel

@{
    ViewData["Title"] = "Типы оплаты";
}

<h4>Типы оплаты</h4>
<p class="text-danger">ВНИМАНИЕ! Удаление записей в этом разделе может нарушить целостность базы.</p>

<form class="form-inline" method="post" asp-page-handler="add">
    <div class="form-group">
        <input asp-for="PaymentType.PaymentTypeName" class="form-control" />
        <span asp-validation-for="PaymentType.PaymentTypeName" class="text-danger"></span>
        <button type="submit" class="btn btn-default">Добавить</button>
    </div>
</form>

<form method="post">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PaymentTypes[0].PaymentTypeName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.PaymentTypes)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PaymentTypeName)
                    </td>
                    <td style="width:100px">
                        <button class="btn btn-default" type="submit" asp-page-handler="delete"
                             asp-route-id="@item.PaymentTypeId">
                            Удалить
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>


