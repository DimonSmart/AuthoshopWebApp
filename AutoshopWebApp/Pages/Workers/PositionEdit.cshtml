@page
@model AutoshopWebApp.Pages.Workers.PositionEditModel

@{
    ViewData["Title"] = "Редактирование должности";
}

<h3>Редактирование должности</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Position.PositionId" />
            <div class="form-group">
                <label asp-for="Position.PositionName" class="control-label"></label>
                <input asp-for="Position.PositionName" class="form-control" />
                <span asp-validation-for="Position.PositionName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position.Salary" class="control-label"></label>
                <input asp-for="Position.Salary" class="form-control" />
                <span asp-validation-for="Position.Salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-danger" asp-page="./PositionsMain">Назад к списку</a>
</div>
