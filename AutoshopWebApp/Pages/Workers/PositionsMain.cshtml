@page
@model AutoshopWebApp.Pages.Workers.PositionsMainModel

@{
    ViewData["Title"] = "Должности";
}

<h3>Должности</h3>

<p>
    <a class="btn btn-default" asp-page="PositionsAdd">Добавить должность</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Position[0].PositionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position[0].Salary)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Position) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PositionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                <a class="btn btn-default" asp-page="./PositionEdit" asp-route-id="@item.PositionId">Редактировать</a>  
                <a class="btn btn-default" asp-page="./PositionDelete" asp-route-id="@item.PositionId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
