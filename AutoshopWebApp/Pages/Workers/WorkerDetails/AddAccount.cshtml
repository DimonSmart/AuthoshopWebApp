@page "{id:int}"
@model AutoshopWebApp.Pages.Workers.WorkerDetails.AddAccountModel
@{
    ViewData["Title"] = "Добавить учётную запись";
}

<h3>Добавить учётную запись</h3>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Account.WorkerId" />
            <div class="form-group">
                <label asp-for="Account.Email" class="control-label"></label>
                <input asp-for="Account.Email" class="form-control" />
                <span asp-validation-for="Account.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.Password" class="control-label"></label>
                <input asp-for="Account.Password" class="form-control" />
                <span asp-validation-for="Account.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.Password2" class="control-label"></label>
                <input asp-for="Account.Password2" class="form-control" />
                <span asp-validation-for="Account.Password2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.RoleId" class="control-label"></label>
                <select asp-for="Account.RoleId" asp-items=@Model.RoleSelectList class="form-control">
                    <option value="">Выберите статус</option>
                </select>
                <span asp-validation-for="Account.RoleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Подтвердить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

