@page
@model AutoshopWebApp.Pages.Workers.WorkerDetails.ChangePasswordModel
@{
    ViewData["Title"] = "ChangePassword";
}

<h2>ChangePassword</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="WorkerData.WorkerID" />
            <div class="form-group">
                <label asp-for="InputModel.Password" class="control-label"></label>
                <input asp-for="InputModel.Password" class="form-control" />
                <span asp-validation-for="InputModel.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InputModel.Password2" class="control-label"></label>
                <input asp-for="InputModel.Password2" class="form-control" />
                <span asp-validation-for="InputModel.Password2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-default" asp-page="./EditAccount" asp-route-id=@Model.WorkerData.WorkerID>Назад</a>
                <input type="submit" value="Подтвердить" class="btn btn-default" />
            </div>
        </form>

    </div>
</div>