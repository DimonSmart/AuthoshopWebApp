@page "{id:int}"
@model AutoshopWebApp.Pages.Workers.WorkerDetails.ChangeLoginModel
@{
    ViewData["Title"] = "Изменить имя пользователя";
}

<h3>Изменить имя пользователя и роль</h3>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="InputModel.WorkerId" />
            <div class="form-group">
                <label asp-for="InputModel.Email" class="control-label"></label>
                <input asp-for="InputModel.Email" class="form-control" />
                <span asp-validation-for="InputModel.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InputModel.Role" class="control-label"></label>
                <select asp-for="InputModel.Role" asp-items=@Model.RoleSelectList class="form-control">
                    <option value="">Выберите статус</option>
                </select>
                <span asp-validation-for="InputModel.Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-default" asp-route-id=@Model.InputModel.WorkerId>Назад</a>
                <input type="submit" value="Подтвердить" class="btn btn-default" />
            </div>
        </form>
        
    </div>
</div>
