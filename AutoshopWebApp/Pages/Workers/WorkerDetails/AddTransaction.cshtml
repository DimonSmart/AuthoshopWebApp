@page "{id:int?}"
@model AutoshopWebApp.Pages.Workers.WorkerDetails.AddTransactionModel

@{
    ViewData["Title"] = "Приказ о перводе";
}

<h2>Приказ о переводе</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TransactionOrder.WorkerId" value="@Model.WorkerCrossPage.WorkerID" />
            <div class="form-group">
                <label asp-for="WorkerCrossPage.Firstname" class="control-label"></label>
                <p class="form-control" readonly="readonly">@Model.WorkerCrossPage.Firstname</p>
            </div>
            <div class="form-group">
                <label asp-for="WorkerCrossPage.Lastname" class="control-label"></label>
                <p class="form-control" readonly="readonly">@Model.WorkerCrossPage.Lastname</p>
            </div>
            <div class="form-group">
                <label asp-for="WorkerCrossPage.Patronymic" class="control-label"></label>
                <p class="form-control" readonly="readonly">@Model.WorkerCrossPage.Patronymic</p>
            </div>
            <div class="form-group">
                <label class="control-label">Должность</label>
                <select class="form-control" asp-for="TransactionOrder.PositionId" asp-items="@Model.Positions">
                    <option value="">Выберите должность</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="TransactionOrder.Reason" class="control-label"></label>
                <input asp-for="TransactionOrder.Reason" class="form-control" />
                <span asp-validation-for="TransactionOrder.Reason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TransactionOrder.OrderNumber" class="control-label"></label>
                <input asp-for="TransactionOrder.OrderNumber" class="form-control" />
                <span asp-validation-for="TransactionOrder.OrderNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TransactionOrder.OrderDate" class="control-label"></label>
                <input asp-for="TransactionOrder.OrderDate" class="form-control" />
                <span asp-validation-for="TransactionOrder.OrderDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Назад</a>
</div>


